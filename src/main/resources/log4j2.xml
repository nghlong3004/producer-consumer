<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>

    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{HH:mm:ss}] [%-5level] %c{1} - %msg%n"/>
    </Console>

    <File name="FileLog" fileName="logs/app.log" append="true">
      <PatternLayout pattern="%d [%t] %-5level %c - %msg%n"/>
    </File>
  </Appenders>

  <Loggers>
    <Logger name="com.yourorg.pc" level="debug" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="FileLog"/>
    </Logger>

    <Root level="debug">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
